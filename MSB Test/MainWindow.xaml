<Window x:Class="MSB_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSB_Test"
        mc:Ignorable="d"
        Title="MainWindow" Height="533" Width="618">
    <Grid Margin="18,10,10,-16">
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <Button x:Name="TestButton" Content="dvdroot" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="TestButton_Click" Width="63" Height="20"/>
        <TextBox x:Name="FileNameTextBox" HorizontalAlignment="Left" Margin="83,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="486" Height="20"/>
        <Button x:Name="Open_MSB" Content="Randomize" HorizontalAlignment="Left" Margin="10,39,0,0" VerticalAlignment="Top" Click="Open_MSB_Click" Height="20" Width="63"/>
        <CheckBox x:Name="ChaliceEnemies" Content="Include Chalice Enemies" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Checked="Chalice_Checked" Height="15" Width="147"/>
        <CheckBox x:Name="BossCheckBox" Content="Randomize Bosses" HorizontalAlignment="Left" Margin="10,92,0,0" VerticalAlignment="Top" Checked="BossCheckBox_Checked" Height="15" Width="118"/>
        <CheckBox x:Name="InsertBosses" Content="Enemies Can Be Bosses" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Checked="InsertBosses_Checked" Height="15" Width="143"/>
        <Slider x:Name="bossSlider" HorizontalAlignment="Left" Margin="42,171,0,0" VerticalAlignment="Top" Width="527" ValueChanged="Slider_ValueChanged" Height="18"/>
        <Label x:Name="sliderValue" Content="0" HorizontalAlignment="Left" Margin="0,167,0,0" VerticalAlignment="Top" Height="26" Width="34"/>
        <CheckBox x:Name="ChaliceBoss" Content="Include Chalice Bosses" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Checked="ChaliceBoss_Checked" Height="15" Width="139"/>
        <Label Content="Percentage Chance an Enemy Will Be a Boss" HorizontalAlignment="Left" Margin="0,146,0,0" VerticalAlignment="Top" Height="26" Width="242"/>
        <CheckBox x:Name="OopsAllCheck" Content="Enemies" HorizontalAlignment="Left" Margin="110,90,0,0" VerticalAlignment="Top" Checked="OopsAllCheck_Checked" Height="15" Width="79" Grid.Row="1"/>
        <TextBox x:Name="OopsAllStringName" TextWrapping="Wrap" TextChanged="OopsAllStringName_TextChanged" Margin="84,126,21,143" Grid.Row="1" Width="485" Height="29"/>
        <Label Content="Percentage Chance an Enemy Will Be a Chalice Enemy" HorizontalAlignment="Left" Margin="0,187,0,0" VerticalAlignment="Top" Height="26" Width="295"/>
        <Label x:Name="ChaliceSliderValue" Content="0" HorizontalAlignment="Left" Margin="0,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="34"/>
        <Slider x:Name="ChaliceSliderThing" HorizontalAlignment="Left" Margin="42,13,0,0" Grid.Row="1" VerticalAlignment="Top" Width="527" ValueChanged="ChaliceSliderThing_ValueChanged"/>
        <TextBox x:Name="OopsBoss" HorizontalAlignment="Left" Margin="84,167,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="485" Height="29" TextChanged="OopsBoss_TextChanged" Grid.Row="1"/>
        <Label Content="Enemies:" HorizontalAlignment="Left" Margin="21,130,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Bosses:" HorizontalAlignment="Left" Margin="25,169,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <CheckBox x:Name="OopsAllBossesCheck" Content="Bosses" HorizontalAlignment="Left" Margin="214,90,0,0" VerticalAlignment="Top" Checked="OopsAllBossesCheck_Checked" Grid.Row="1"/>
        <Label Content="Customize Run" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" IsEnabled="False" Grid.Row="1"/>

    </Grid>
</Window>
