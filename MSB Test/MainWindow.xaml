<Window x:Name="Bloodborne_Randomizer" x:Class="MSB_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MSB_Test"
        mc:Ignorable="d"
        Title="Bloodborne Randomizer" Height="533" Width="782" Icon="/menu_knowledge_04215.png">
    <Grid Margin="18,10,10,-16">
        <Grid.RowDefinitions>
            <RowDefinition Height="42*"/>
            <RowDefinition Height="59*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Open_MSB" Content="Randomize" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Click="Open_MSB_Click" Height="20" Width="63"/>
        <CheckBox x:Name="ChaliceEnemies" Content="Include Chalice Enemies" HorizontalAlignment="Left" Margin="10,131,0,0" VerticalAlignment="Top" Checked="Chalice_Checked" Height="15" Width="147"/>
        <CheckBox x:Name="BossCheckBox" Content="Randomize Bosses" HorizontalAlignment="Left" Margin="10,71,0,0" VerticalAlignment="Top" Checked="BossCheckBox_Checked" Height="15" Width="118"/>
        <CheckBox x:Name="InsertBosses" Content="Enemies Can Be Bosses" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Checked="InsertBosses_Checked" Height="15" Width="143"/>
        <Slider x:Name="bossSlider" HorizontalAlignment="Left" Margin="42,205,0,0" VerticalAlignment="Top" Width="690" ValueChanged="Slider_ValueChanged" Height="18" Grid.RowSpan="2"/>
        <Label x:Name="sliderValue" Content="0" HorizontalAlignment="Left" Margin="0,201,0,0" VerticalAlignment="Top" Height="26" Width="34" Grid.RowSpan="2"/>
        <CheckBox x:Name="ChaliceBoss" Content="Include Chalice Bosses" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Checked="ChaliceBoss_Checked" Height="15" Width="139"/>
        <Label Content="Percentage Chance an Enemy Will Be a Boss" HorizontalAlignment="Left" Margin="0,170,0,0" VerticalAlignment="Top" Height="26" Width="242"/>
        <CheckBox x:Name="OopsAllCheck" Content="Enemies" HorizontalAlignment="Left" Margin="110,131,0,0" VerticalAlignment="Top" Checked="OopsAllCheck_Checked" Height="15" Width="79" Grid.Row="1"/>
        <TextBox x:Name="OopsAllStringName" TextWrapping="Wrap" TextChanged="OopsAllStringName_TextChanged" Margin="84,166,0,96" Grid.Row="1"/>
        <Label Content="Percentage Chance an Enemy Will Be a Chalice Enemy" HorizontalAlignment="Left" Margin="0,18,0,0" VerticalAlignment="Top" Height="26" Width="294" Grid.Row="1"/>
        <Label x:Name="ChaliceSliderValue" Content="0" HorizontalAlignment="Left" Margin="0,59,0,0" Grid.Row="1" VerticalAlignment="Top" Width="42"/>
        <Slider x:Name="ChaliceSliderThing" HorizontalAlignment="Left" Margin="42,62,0,0" Grid.Row="1" VerticalAlignment="Top" Width="690" ValueChanged="ChaliceSliderThing_ValueChanged"/>
        <TextBox x:Name="OopsBoss" Margin="84,208,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="29" TextChanged="OopsBoss_TextChanged" Grid.Row="1"/>
        <Label Content="Enemies:" HorizontalAlignment="Left" Margin="21,171,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <Label Content="Bosses:" HorizontalAlignment="Left" Margin="25,210,0,0" VerticalAlignment="Top" Grid.Row="1"/>
        <CheckBox x:Name="OopsAllBossesCheck" Content="Bosses" HorizontalAlignment="Left" Margin="214,131,0,0" VerticalAlignment="Top" Checked="OopsAllBossesCheck_Checked" Grid.Row="1"/>
        <Label Content="Customize Run" HorizontalAlignment="Left" Margin="10,126,0,0" VerticalAlignment="Top" IsEnabled="False" Grid.Row="1"/>
        <CheckBox x:Name="RandomizeEnemiesCheck" Content="Randomize Enemies" HorizontalAlignment="Left" Margin="10,51,0,0" VerticalAlignment="Top" Checked="RandomizeEnemiesCheck_Checked"/>
        <CheckBox x:Name="AddNPCS" Content="Randomize NPC's (Experimental)" HorizontalAlignment="Left" Margin="422,71,0,0" VerticalAlignment="Top" Checked="AddNPCS_Checked"/>
        <CheckBox x:Name="ArmorRandomizerCheckBox" Content="Randomize Items - Doesn't include keys (Experimental)" HorizontalAlignment="Left" Margin="422,51,0,0" VerticalAlignment="Top" Checked="ArmorRandomizerCheckBox_Checked"/>

    </Grid>
</Window>
